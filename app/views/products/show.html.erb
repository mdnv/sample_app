<% provide(:title, @product.name) %>
<div class="row">
  <aside class="col-md-2">
    <section class="product_thumbnails">
      <ul>
        <% @variant.images.each.with_index(1) do | image, index | %>
          <li><%= link_to "JavaScript:Void(0);" do %>
            <%= image_tag image, size: "60x60" %>
          <% end %></li>
        <% end %>
      </ul>
    </section>
  </aside>
  <aside class="col-md-6">
    <section>
      <h1>
        <%= image_tag @variant.images.first, alt: @product.name, size: "600x600" %>
      </h1>
    </section>
  </aside>
  <div class="col-md-3">
    <section class="product_info">
      <br><br><br><br>
      <span><%= pluralize(@product.reviews.count, "reviews") %></span>

      <h1><%= @product.name %></h1>

      <ul>
        <% @product.variants.each.with_index(1) do | variant, index | %>
          <li><%= link_to product_path(@product, variant: @variant.id) do %>
            <%= image_tag variant.images.first, size: "60x60" %>
          <% end %></li>
        <% end %>
      </ul>

      <%= render 'cart_form' %>

      <%= render 'wish_form' %>
    </section>
  </div>
</div>

<div class="row">
  <aside class="col-md-12">
    <section class="micropost_form">
      <%= render 'reviews/form' %>
    </section>
    <section class="reviews">
      <% if @product.reviews.any? %>
        <h3>Reviews (<%= @product.reviews.count %>)</h3>
        <ol class="reviews">
          <%= render @product.reviews %>
        </ol>
      <% end %>
    </section>
  </aside>
</div>
